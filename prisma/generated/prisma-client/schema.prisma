generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WaitlistEntry {
  id               Int                    @id @default(autoincrement())
  fullName         String
  email            String                 @unique
  phoneNumber      String?
  age              Int?
  occupation       Occupation
  soundHealingExp  SoundHealingExperience
  waterComfort     WaterComfort
  preferredSession PreferredSession
  futureJourney    FutureJourney
  instagramHandle  String?                @db.VarChar(255)
  createdAt        DateTime               @default(now())
}

enum Entry {
  Solo
  Couple
}

enum FutureJourney {
  Yes
  OnlyForThisSession
  NotAtTheMoment
}

enum Occupation {
  Entrepreneur
  WorkingProfessional
  Creative
  WellnessPractitioner
  Student
  Athlete
  Homemaker
  Exploring
  Other
}

enum PreferredSession {
  Sunrise
  Sunset
  Night
  Flexible
}

enum SoundHealingExperience {
  YesRegularly
  OnceOrTwice
  NotYetButCurious
  FirstTime
}

enum WaterComfort {
  YesAbsolutely
  LoveToTryWithSupport
  PreferGroundingSoundJourneys
}

//new model

model Event2 {
  id          String @id @default(cuid())
  fullName    String
  email       String @unique
  phoneNumber String
  age         Int

  occupation        Jobrole
  fitnessLevel      FitnessLevel
  donePopPilates    YesNo
  caffeineSensitive CaffeineSensitivity
  excitementReason  String
  wantsUpdates      YesNo
  instagramHandle   String? // optional

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Jobrole {
  ENTREPRENEUR_FOUNDER
  WORKING_PROFESSIONAL
  CREATIVE_ARTIST
  WELLNESS_PRACTITIONER
  STUDENT
  ATHLETE_SPORTSPERSON
  HOMEMAKER
  EXPLORING
  OTHER
}

enum FitnessLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum YesNo {
  YES
  NO
}

enum CaffeineSensitivity {
  YES
  NO
  NOT_SURE
}

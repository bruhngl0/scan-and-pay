generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WaitlistEntry {
  id               Int                    @id @default(autoincrement())
  fullName         String
  email            String                 @unique
  phoneNumber      String?
  age              Int?
  occupation       Occupation
  soundHealingExp  SoundHealingExperience
  waterComfort     WaterComfort
  preferredSession PreferredSession
  futureJourney    FutureJourney
  instagramHandle  String?                @db.VarChar(255)
  createdAt        DateTime               @default(now())
}

enum Occupation {
  Entrepreneur
  WorkingProfessional
  Creative
  WellnessPractitioner
  Student
  Athlete
  Homemaker
  Exploring
  Other
}

enum SoundHealingExperience {
  YesRegularly
  OnceOrTwice
  NotYetButCurious
  FirstTime
}

enum WaterComfort {
  YesAbsolutely
  LoveToTryWithSupport
  PreferGroundingSoundJourneys
}

enum PreferredSession {
  Sunrise
  Sunset
  Night
  Flexible
}

enum FutureJourney {
  Yes
  OnlyForThisSession
  NotAtTheMoment
}
